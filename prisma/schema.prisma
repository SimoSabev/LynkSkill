generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

//
// ---------------------
// USERS
// ---------------------
model User {
  id                 String        @id @default(cuid())
  clerkId            String        @unique
  email              String
  role               Role
  onboardingComplete Boolean       @default(false)
  introShown         Boolean       @default(false)
  profile            Profile?
  companies          Company[]     @relation("UserCompanies")
  applications       Application[] @relation("StudentApplications")
  portfolio          Portfolio?
  projects           Project[]     @relation("StudentProjects")
  experiences        Experience[]
  tosAccepted        Boolean       @default(false)
  privacyAccepted    Boolean       @default(false)

  testSubmissions    TestSubmission[]
  assignments        Assignment[]  @relation("StudentAssignments")
  assignmentFiles    AssignmentFile[]
  notifications      Notification[]
  savedInternships   SavedInternship[]
  conversations      Conversation[] @relation("StudentConversations")
  sentMessages       Message[]      @relation("SentMessages")
  reviews            Review[]       @relation("StudentReviews")
  candidateEvaluations CandidateEvaluation[] @relation("CandidateEvaluations")

  // Company Roles System
  companyMembership     CompanyMember?         @relation("UserMembership")
  invitedMembers        CompanyMember[]        @relation("MemberInviter")
  createdCustomRoles    CompanyCustomRole[]    @relation("RoleCreator")
  createdInvitations    CompanyInvitation[]    @relation("InvitationCreator")
  transfersInitiated    OwnershipTransferRequest[] @relation("TransferFrom")
  transfersReceived     OwnershipTransferRequest[] @relation("TransferTo")

  @@index([role])
}

//
// ---------------------
// COMPANY
// ---------------------
model Company {
  id          String       @id @default(cuid())
  name        String
  eik         String?
  description String
  location    String
  website     String?
  logo        String?
  ownerId     String
  owner       User         @relation("UserCompanies", fields: [ownerId], references: [id])
  internships Internship[]
  projects    Project[]
  experiences Experience[]
  conversations Conversation[]
  reviews     Review[]
  candidateEvaluations CandidateEvaluation[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  tosAccepted     Boolean  @default(false)
  privacyAccepted Boolean  @default(false)

  // Company Roles System
  members           CompanyMember[]
  customRoles       CompanyCustomRole[]
  invitations       CompanyInvitation[]
  transferRequests  OwnershipTransferRequest[]
}

//
// ---------------------
// USER PROFILE
// ---------------------
model Profile {
  id       String  @id @default(cuid())
  userId   String  @unique
  name     String
  bio      String?
  settings Json?   // User settings (notifications, privacy, appearance, etc.)
  user     User    @relation(fields: [userId], references: [id])
}

//
// ---------------------
// INTERNSHIPS
// ---------------------
model Internship {
  id                        String    @id @default(cuid())
  companyId                 String
  title                     String
  description               String
  qualifications            String?
  location                  String
  paid                      Boolean   @default(false)
  salary                    Float?
  skills                    String[]  @default([])

  applicationStart          DateTime  @default(now())
  applicationEnd            DateTime  @default(now())
  startDate                 DateTime?
  endDate                   DateTime?

  testAssignmentTitle       String?
  testAssignmentDescription String?
  testAssignmentDueDate     DateTime?
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt

  company          Company          @relation(fields: [companyId], references: [id])
  applications     Application[]
  projects         Project[]
  testSubmissions  TestSubmission[]
  assignments      Assignment[]
  savedBy          SavedInternship[]

  @@index([companyId])
  @@index([companyId, createdAt])
  @@index([paid])
  @@index([location])
}

//
// ---------------------
// ASSIGNMENTS
// ---------------------
model Assignment {
  id             String     @id @default(cuid())
  internshipId   String
  studentId      String
  title          String
  description    String
  dueDate        DateTime
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  internship     Internship @relation(fields: [internshipId], references: [id])
  student        User       @relation("StudentAssignments", fields: [studentId], references: [id]) // ✅ opposite side
  submissions    AssignmentFile[]
}

//
// ---------------------
// ASSIGNMENT FILES
// ---------------------
model AssignmentFile {
  id           String   @id @default(cuid())
  assignmentId String
  userId       String   // ✅ add this line
  name         String
  size         Int
  url          String
  createdAt    DateTime @default(now())

  assignment   Assignment @relation(fields: [assignmentId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}


//
// ---------------------
// TEST SUBMISSIONS
// ---------------------
model TestSubmission {
  id            String     @id @default(cuid())
  internshipId  String
  studentId     String
  fileUrl       String
  submittedAt   DateTime   @default(now())

  internship    Internship @relation(fields: [internshipId], references: [id])
  student       User       @relation(fields: [studentId], references: [id])
}

//
// ---------------------
// APPLICATIONS
// ---------------------
model Application {
  id           String            @id @default(cuid())
  internshipId String
  studentId    String
  status       ApplicationStatus @default(PENDING)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  internship   Internship   @relation(fields: [internshipId], references: [id])
  student      User         @relation("StudentApplications", fields: [studentId], references: [id])
  project      Project?
  conversation Conversation?
  review       Review?
  interviews   Interview[]

  @@unique([internshipId, studentId])
  @@index([studentId])
  @@index([status])
  @@index([studentId, status])
}

//
// ---------------------
// PORTFOLIO
// ---------------------
model Portfolio {
  id        String   @id @default(cuid())
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId String   @unique

  fullName     String?
  headline     String?
  age          Int?
  bio          String?

  skills       String[]
  interests    String[]
  experience   String?
  education    Json?
  projects     Json?
  certifications Json?

  linkedin     String?
  github       String?
  portfolioUrl String?

  needsApproval   Boolean @default(false)
  approvedBy      String?
  approvalStatus  ApprovalStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([approvalStatus])
}

//
// ---------------------
// PROJECTS
// ---------------------
model Project {
  id            String      @id @default(cuid())
  title         String
  description   String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  internshipId  String
  internship    Internship  @relation(fields: [internshipId], references: [id])

  applicationId String       @unique
  application   Application  @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  studentId     String
  student       User         @relation("StudentProjects", fields: [studentId], references: [id])

  companyId     String
  company       Company      @relation(fields: [companyId], references: [id])

  experiences   Experience[]
}



// ---------------------
// EXPERIENCE
// ---------------------
model Experience {
  id            String   @id @default(cuid())
  studentId     String
  companyId     String
  projectId     String

  mediaUrls     String[]
  status        String   @default("pending")
  
  // Legacy grade field (kept for backward compatibility, derived from new ratings)
  grade         Int?
  
  // New Skill Endorsement System
  skillsRating     Int?      // 1-5: Technical/practical skills demonstrated
  impactRating     Int?      // 1-5: Contribution impact to the project/company
  growthRating     Int?      // 1-5: Learning progress and adaptability
  recommendation   String?   // "highly_recommend" | "recommend" | "neutral" | "not_recommend"
  endorsementNote  String?   // Optional feedback from company
  
  uploaderName  String?
  uploaderImage String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  student User    @relation(fields: [studentId], references: [id])
  company Company  @relation(fields: [companyId], references: [id])
  project Project  @relation(fields: [projectId], references: [id])

  @@index([studentId])
  @@index([companyId])
  @@index([status])
}



model eikCheck {
  id        Int      @id @default(autoincrement())
  eik       String
  ip        String
  valid     Boolean
  timestamp DateTime @default(now())
}

//
// ---------------------
// NOTIFICATIONS
// ---------------------
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?
  metadata  Json?    // Store additional data like applicationId, projectId, etc.
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, read])
  @@index([createdAt])
}

//
// ---------------------
// SAVED INTERNSHIPS
// ---------------------
model SavedInternship {
  id           String   @id @default(cuid())
  userId       String
  internshipId String
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  internship Internship @relation(fields: [internshipId], references: [id], onDelete: Cascade)

  @@unique([userId, internshipId])
  @@index([userId])
}

//
// ---------------------
// CONVERSATIONS (for messaging)
// ---------------------
model Conversation {
  id            String   @id @default(cuid())
  applicationId String   @unique
  studentId     String
  companyId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  student     User        @relation("StudentConversations", fields: [studentId], references: [id], onDelete: Cascade)
  company     Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  messages    Message[]

  @@index([studentId])
  @@index([companyId])
}

//
// ---------------------
// CANDIDATE AI EVALUATIONS
// ---------------------
model CandidateEvaluation {
  id              String   @id @default(cuid())
  candidateId     String   // The student being evaluated
  companyId       String   // The company that ran the evaluation
  sessionId       String   // Unique session ID for the AI chat
  sessionName     String?  // Optional friendly name for the session
  searchQuery     String?  // What the company searched for
  requiredSkills  String[] // Skills that were searched
  matchPercentage Int      // The match score
  matchReasons    String[] // Why they matched
  matchedSkills   String[] // Which skills matched
  createdAt       DateTime @default(now())

  candidate User    @relation("CandidateEvaluations", fields: [candidateId], references: [id], onDelete: Cascade)
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([candidateId])
  @@index([companyId])
  @@index([sessionId])
  @@index([createdAt])
}

//
// ---------------------
// MESSAGES
// ---------------------
model Message {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  senderType     SenderType
  content        String
  read           Boolean  @default(false)
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([conversationId, createdAt])
  @@index([senderId])
}

//
// ---------------------
// COMPANY REVIEWS
// ---------------------
model Review {
  id          String   @id @default(cuid())
  companyId   String
  studentId   String
  applicationId String @unique
  rating      Int      // 1-5 stars
  title       String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  company     Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  student     User        @relation("StudentReviews", fields: [studentId], references: [id], onDelete: Cascade)
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([studentId])
  @@index([rating])
}

//
// ---------------------
// INTERVIEWS
// ---------------------
model Interview {
  id            String          @id @default(cuid())
  applicationId String
  scheduledAt   DateTime
  duration      Int             @default(30) // minutes
  location      String?         // physical location or video link
  notes         String?
  status        InterviewStatus @default(SCHEDULED)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([applicationId])
  @@index([scheduledAt])
  @@index([status])
}

//
// ---------------------
// ENUMS
// ---------------------
enum Role {
  STUDENT
  COMPANY
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum InterviewStatus {
  SCHEDULED
  CONFIRMED
  COMPLETED
  CANCELLED
  RESCHEDULED
}

enum NotificationType {
  APPLICATION_SUBMITTED
  APPLICATION_APPROVED
  APPLICATION_REJECTED
  NEW_ASSIGNMENT
  ASSIGNMENT_SUBMITTED
  EXPERIENCE_GRADED
  INTERNSHIP_DEADLINE
  NEW_MESSAGE
  INTERVIEW_SCHEDULED
  INTERVIEW_REMINDER
  GENERAL
  // Company Team Notifications
  TEAM_INVITATION
  TEAM_INVITATION_ACCEPTED
  TEAM_MEMBER_REMOVED
  TEAM_ROLE_CHANGED
  OWNERSHIP_TRANSFER_REQUEST
  OWNERSHIP_TRANSFER_COMPLETED
}

enum SenderType {
  STUDENT
  COMPANY
}

//
// ---------------------
// COMPANY ROLES SYSTEM - ENUMS
// ---------------------

// Default company roles (predefined)
enum DefaultCompanyRole {
  OWNER        // Full access, can transfer ownership, delete company
  ADMIN        // Almost full access, can manage members
  HR_MANAGER   // Manage internships, applications, interviews
  HR_RECRUITER // View candidates, manage applications (limited)
  VIEWER       // Read-only access
}

// Member status in company
enum MemberStatus {
  PENDING    // Invited but not yet accepted
  ACTIVE     // Active member
  SUSPENDED  // Temporarily suspended
}

// Permission types that can be assigned
enum Permission {
  // Company Management
  DELETE_COMPANY
  EDIT_COMPANY
  TRANSFER_OWNERSHIP
  
  // Member Management
  MANAGE_MEMBERS
  INVITE_MEMBERS
  REMOVE_MEMBERS
  CHANGE_ROLES
  DELEGATE_PERMISSIONS
  
  // Internship Management
  CREATE_INTERNSHIPS
  EDIT_INTERNSHIPS
  DELETE_INTERNSHIPS
  
  // Application Management
  VIEW_APPLICATIONS
  MANAGE_APPLICATIONS
  APPROVE_APPLICATIONS
  REJECT_APPLICATIONS
  
  // Candidate Management
  VIEW_CANDIDATES
  SEARCH_CANDIDATES
  
  // Interview Management
  SCHEDULE_INTERVIEWS
  CONDUCT_INTERVIEWS
  
  // Messaging
  SEND_MESSAGES
  VIEW_MESSAGES
  
  // Experience & Assignments
  CREATE_ASSIGNMENTS
  GRADE_EXPERIENCES
  
  // Analytics
  VIEW_ANALYTICS
}

//
// ---------------------
// COMPANY ROLES SYSTEM - MODELS
// ---------------------

// Custom roles defined by company
model CompanyCustomRole {
  id           String       @id @default(cuid())
  companyId    String
  name         String       // e.g., "Senior HR", "Intern Coordinator"
  description  String?
  permissions  Permission[] // Explicit permissions for this role
  color        String?      // Badge color for UI
  createdById  String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  company      Company      @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdBy    User         @relation("RoleCreator", fields: [createdById], references: [id])
  members      CompanyMember[]

  @@unique([companyId, name])
  @@index([companyId])
}

// Links users to companies with their role
model CompanyMember {
  id              String              @id @default(cuid())
  companyId       String
  userId          String              @unique  // One user = one company only
  
  // Role assignment (either default OR custom, not both)
  defaultRole     DefaultCompanyRole?
  customRoleId    String?
  
  // Additional permissions granted by owner/admin
  extraPermissions Permission[]       @default([])
  
  // Invitation tracking
  invitedByEmail  String?             // Email used for invitation
  invitedById     String?
  status          MemberStatus        @default(PENDING)
  invitedAt       DateTime            @default(now())
  joinedAt        DateTime?
  
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  company         Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user            User                @relation("UserMembership", fields: [userId], references: [id], onDelete: Cascade)
  invitedBy       User?               @relation("MemberInviter", fields: [invitedById], references: [id])
  customRole      CompanyCustomRole?  @relation(fields: [customRoleId], references: [id])

  @@index([companyId])
  @@index([status])
}

// Ownership transfer requests (for secure transfer)
model OwnershipTransferRequest {
  id              String    @id @default(cuid())
  companyId       String
  fromUserId      String    // Current owner
  toUserId        String    // New owner
  confirmationCode String   // Random code they must type
  confirmedOnce   Boolean   @default(false)
  expiresAt       DateTime  // 24 hour expiry
  completedAt     DateTime?
  cancelledAt     DateTime?
  createdAt       DateTime  @default(now())

  company         Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  fromUser        User      @relation("TransferFrom", fields: [fromUserId], references: [id])
  toUser          User      @relation("TransferTo", fields: [toUserId], references: [id])

  @@index([companyId])
  @@index([toUserId])
}

// Invitation tokens for email invitations
model CompanyInvitation {
  id           String              @id @default(cuid())
  companyId    String
  email        String
  role         DefaultCompanyRole  @default(VIEWER)
  customRoleId String?
  token        String              @unique
  invitedById  String
  expiresAt    DateTime
  acceptedAt   DateTime?
  createdAt    DateTime            @default(now())

  company      Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  invitedBy    User                @relation("InvitationCreator", fields: [invitedById], references: [id])

  @@index([email])
  @@index([companyId])
  @@index([token])
}